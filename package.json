{
  "name": "thesis-checker",
  "displayName": "Thesis Checker",
  "description": "An AI based thesis checker.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.106.1"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:thesis-checker.scanWorkspace",
    "onCommand:thesis-checker.exportStructure"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "thesis-checker.scanWorkspace",
        "title": "Thesis Checker: Scan Workspace"
      },
      {
        "command": "thesis-checker.exportStructure",
        "title": "Thesis Checker: Export Structured JSON"
      }
    ],
    "configuration": {
      "title": "Thesis Checker",
      "properties": {
        "thesisChecker.logic.minimumSentencesPerSection": {
          "type": "number",
          "default": 3,
          "minimum": 0,
          "markdownDescription": "Minimum recommended sentence count per section before raising a warning."
        },
        "thesisChecker.llm.enabled": {
          "type": "boolean",
          "default": false,
          "markdownDescription": "Enable LLM-powered analysis. Requires provider-specific configuration."
        },
        "thesisChecker.llm.provider": {
          "type": "string",
          "enum": [
            "openai",
            "ollama"
          ],
          "default": "openai",
          "markdownDescription": "LLM provider to use for AI-based review."
        },
        "thesisChecker.llm.openaiApiKey": {
          "type": "string",
          "default": "",
          "markdownDescription": "API key for OpenAI-compatible endpoints."
        },
        "thesisChecker.llm.openaiModel": {
          "type": "string",
          "default": "gpt-3.5-turbo",
          "markdownDescription": "Model name for OpenAI-style providers."
        },
        "thesisChecker.llm.openaiBaseUrl": {
          "type": "string",
          "default": "https://api.openai.com/v1/chat/completions",
          "markdownDescription": "Override the OpenAI API endpoint (useful for Azure/OpenAI-compatible gateways)."
        },
        "thesisChecker.llm.ollamaEndpoint": {
          "type": "string",
          "default": "http://localhost:11434",
          "markdownDescription": "Ollama HTTP endpoint."
        },
        "thesisChecker.llm.ollamaModel": {
          "type": "string",
          "default": "llama3",
          "markdownDescription": "Model to use when calling Ollama."
        },
        "thesisChecker.llm.maxItems": {
          "type": "number",
          "default": 20,
          "minimum": 1,
          "markdownDescription": "Maximum number of elements (sentences/equations) to send to the LLM per run."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.106.1",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.27.0",
    "eslint": "^9.39.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.3"
  },
  "dependencies": {
    "sentence-splitter": "^5.0.0"
  }
}
